
{{#with serie}}
<h1>{{name}}</h1>
<h2>{{rating}}</h2>
<p>{{resume}}</p>
<p>{{genre}}</p>

{{#if isOwner}}
<button><a href="/editar-serie/{{serie._id}}">Editar serie</a></button>
<button><a href="/delete-serie/{{serie._id}}">Deletar serie</a></button>
{{/if}}

<button><a href="/series">Voltar</a></button>

<h3>Qual a sua opini√£o?</h3>
<form action="/serie-review/{{_id}}" method="POST">
    <label for="review"></label>
    <input type="text" name='comment'>
    <button type="submit">Adicionar review</button>
</form>
{{#each review}}
    <h3>{{user}}</h3>
    <p>{{comment}}</p>
{{/each}}
{{/with}}


