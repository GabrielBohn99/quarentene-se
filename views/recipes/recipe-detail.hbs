<img src="{{imgPath}}" alt="{{imgName}}">
{{/if}}
<h1>{{name}}</h1>
<h2>{{category}}</h2>
<h2>{{level}}</h2>
<p>{{prepare}}</p>
<p>{{duration}}</p>

